# prelude.tlp
sleep t = receive [] -timeout=(t, [ ! => .ok ])
flush! = receive [ _ => flush! ] -timeout=(0, [ ! => .ok ])

# example.tlp
loop! = receive [
  .hello => (
    print 'hello
    sleep 2
    loop!
  )

  .die => .ok
]

# repl
: pid = spawn pause-loop
: repeat 10 [ i => .hello (to-str i) > send pid ]
# prints 0 through 9, waiting two seconds in between

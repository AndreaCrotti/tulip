# prelude.tlp
send-wait pid msg = (
  send pid (self!, msg)
  receive [ x => x ]
)

# ref.tlp
@module ref

ref value = Ref (spawn [ ! => loop value ])

loop value = receive [
  .set new-value => loop new-value
  p, .get => (send p value; loop value)
]

@object Ref pid [
  set val = .set val > send pid
  get! = .get > send-wait pid
]

# repl
: r = ref 10
= *<ref/Ref *<Pid 5>>
: r/get!
= 10
: r/set 20
= .ok
: r/get!
= 20
